<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorWheel">
        <!-- 背景圆的半径 -->
        <attr name="circle_radius" format="dimension" />
        <!-- 可滑动小球的半径 -->
        <attr name="center_radius" format="dimension" />
        <!-- 可滑动小球的颜色 -->
        <attr name="center_color" format="color" />
    </declare-styleable>

    <!--填充验证码-->
    <declare-styleable name="PhoneCodeView">
        <!-- 默认颜色 -->
        <attr name="color_default" format="color" />
        <!-- 选中颜色 -->
        <attr name="color_focus" format="color" />
        <!-- 第四个文字颜色 -->
        <attr name="code4_color" format="color" />
        <!-- 第四个光标颜色 -->
        <attr name="vline4_bg" format="color" />
        <!-- 光标闪烁频率 -->
        <attr name="flash_duration" format="dimension" />
    </declare-styleable>

</resources>